<%= form_for (property) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>
      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <p><%= f.label :name %></p>
   <%= f.text_field :name %>
  </div>
  <div class="field">
    <p><%= f.label :rent %></p>
     <span><%= f.number_field :rent %>円</span>
  </div>
  <div class="field">
    <p><%= f.label :address %></p>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <p><%= f.label :building_age %></p>
     <span><%= f.number_field :building_age %>年</span>
  </div>
  <div class="field">
    <p><%= f.label :remarks %></p>
    <%= f.text_area :remarks %>
  </div>

  <%#indexメソッドによって必要な回数分の入力欄が追加される%>
  <%= f.fields_for :closet_stations do |c| %>
    <h3>最寄り駅<%= c.index + 1 %></h3>
    <div class="field">
      <p><%= c.label :route %></p>
      <%= c.text_field :route %>
    </div>
    <div class="field">
      <p><%= c.label :station %></p>
      <%= c.text_field :station %>
    </div>
    <div class="field">
      <p><%= c.label :walk_time %></p>
      <span><%= c.number_field :walk_time %>分</span>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
