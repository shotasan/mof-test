<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= number_with_delimiter(@property.rent) %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数</strong>
  <%= @property.building_age %>
</p>

<p>
  <strong>備考</strong>
  <%= @property.remarks %>
</p>



<% @property.closet_stations.each_with_index do |s, i| %>
  <h3>最寄り駅<%= i += 1 %></h3>
  <p>
    <strong>路線名</strong>
    <%= s.route %>
  </p>
  <p>
    <strong>駅名</strong>
    <%= number_with_delimiter(s.station) %>
  </p>
  <p>
    <strong>徒歩分数</strong>
    <%= s.walk_time %>
  </p>
<% end %>



<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
